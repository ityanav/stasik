bybit:
  testnet: true
  api_key: "YOUR_API_KEY"
  api_secret: "YOUR_API_SECRET"

trading:
  pairs: ["BTCUSDT", "ETHUSDT", "SOLUSDT"]
  market_type: "both"        # spot / futures / both
  timeframe: "5"             # minutes: 1, 3, 5, 15
  leverage: 3                # futures only

strategy:
  rsi_period: 14
  rsi_overbought: 70
  rsi_oversold: 30
  ema_fast: 9
  ema_slow: 21
  macd_fast: 12
  macd_slow: 26
  macd_signal: 9
  min_score: 2               # min matching signals to enter

risk:
  risk_per_trade: 1.0        # % of balance per trade
  stop_loss: 0.5             # % stop-loss
  take_profit: 1.0           # % take-profit
  max_open_positions: 3
  max_daily_loss: 5.0        # % â€” auto-stop on breach

telegram:
  token: "YOUR_TELEGRAM_BOT_TOKEN"
  chat_id: "YOUR_CHAT_ID"
